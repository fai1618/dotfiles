echo "bashAliases"
alias e='exit'

# 2つ上、3つ上にも移動できるようにする
alias ...='cd ../..'
alias ....='cd ../../..'

alias ll='ls -alF'
alias la='ls -a'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
if [ $(uname) = "Linux" ];then
  if which trash-put &>/dev/null; then
    alias rm='trash-put'
  fi
  alias open='xdg-open 2>/dev/null'
  alias ls='ls --color=auto'
fi
alias grep='grep -i --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
if type tmux >/dev/null 2>&1; then
  alias t='tmux'
  alias tl='t ls'
  alias ta='t attach -t'
fi
if type jupyter >/dev/null 2>&1; then
  alias jnote='jupyter notebook'
fi
if type python >/dev/null 2>&1; then
    alias py='python'
fi
if type ipython >/dev/null 2>&1; then
  alias ipy="ipython"
fi
if type bpython >/dev/null 2>&1; then
    alias bpy='bpython'
fi
if type apt-get >/dev/null 2>&1; then
    alias a='apt-get'
    alias au='sudo apt-get update && sudo apt-get upgrade -y'
fi
UNAME="$(uname)"
if [ $UNAME = 'Darwin' ];then
  alias ls='ls -G'
  alias f="open -a Finder ./"
  alias b="brew"
  #alias f='open .'
  alias vim='reattach-to-user-namespace vim'
  alias vi='reattach-to-user-namespace vim'
  alias memo='vim $HOME/raspi'
  alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
  alias twitter='rainbowstream'
  alias brewu='brew update && brew upgrade'
  alias bu='brewu'
  alias bu='brewu && brew cleanup'
  alias rm='trash'
fi

if [ $UNAME = 'Linux' ];then

  if   [ -e /etc/debian_version ] ||
     [ -e /etc/debian_release ]; then
    # Check Ubuntu or Debian
    if [ -e /etc/lsb-release ]; then
      # Ubuntu
      dist_name="ubuntu"
    else
      # Debian
      dist_name="debian"
    fi
  elif [ -e /etc/fedora-release ]; then
    # Fedra
    dist_name="fedora"
  else
    # Other
    echo "unkown distribution"
    dist_name="unkown"
  fi

  if [ $dist_name = 'ubuntu' ];then
    alias f='xdg-open .'
    alias vi='vim'
  fi

  alias diff='vim -d'
fi
echo ".bashAliases is sourced"
