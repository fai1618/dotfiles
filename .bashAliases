echo "bashAliases"
alias e='exit'
alias ll='ls -alF'
alias la='ls -a'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias diff='vimdiff'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
if type python >/dev/null 2>&1; then
    alias py='python'
fi
if type bpython >/dev/null 2>&1; then
    alias bpy='bpython'
fi
UNAME="$(uname)"
if [ $UNAME = 'Darwin' ];then
  alias ls='ls -G'
  alias f='open .'
  alias vim='reattach-to-user-namespace vim'
  alias vi='reattach-to-user-namespace vim'
  alias memo='vim $HOME/raspi'
  alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
  alias twitter='rainbowstream'
fi

alias lighton='curl http://192.168.11.14:8080/on;echo'
alias lightoff='curl http://192.168.11.14:8080/off;echo'
alias doorsleep='curl http://192.168.11.14:8080/sleep;echo'
alias doorwakeup='curl http://192.168.11.14:8080/wakeup;echo'


if [ $UNAME = 'Linux' ];then

  if   [ -e /etc/debian_version ] ||
     [ -e /etc/debian_release ]; then
    # Check Ubuntu or Debian
    if [ -e /etc/lsb-release ]; then
      # Ubuntu
      dist_name="ubuntu"
    else
      # Debian
      dist_name="debian"
    fi
  elif [ -e /etc/fedora-release ]; then
    # Fedra
    dist_name="fedora"
  else
    # Other
    echo "unkown distribution"
    dist_name="unkown"
  fi

  if [ $dist_name = 'ubuntu' ];then
    alias f='xdg-open .'
    alias vi='vim'
  fi

  alias diff='vim -d'
fi
echo ".bashAliases is sourced"
